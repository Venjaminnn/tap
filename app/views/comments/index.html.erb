<%= stylesheet_link_tag "application", media: "all" %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <link rel="stylesheets" href="new.css"/>
     <style>
     
        body {
          background-image: none !important;
          background-color: #626262 !important;
        }

        .comments-section {
          position: relative;
          width: 800px;
          float: left;
          background-color: #626262;
          padding: 20px;
          border: 1px solid #3E3E3E;
          border-radius: 5px;
          box-shadow: 0px 4px 4px rgb(0 0 0 / 25%);
          margin: 30px 20px;
        }

        .comments-section header {
          color: white;
          justify-content: center;
          display: flex;
          font-size: 38px;
          margin-top: 0;
          font-weight: bold;
        }

        .add-comment-section header {
          color: white;
          justify-content: center;
          display: flex;
          font-size: 28px;
          margin-top: 0;
          font-weight: bold;
        }

        .comments-list {
          margin-bottom: 10px;
        }
        .comment {
          display: flex;
          align-items: center;
          justify-content: space-between;
        }

        .add-comment-section {
          position: fixed;
          top: 65%;
          right: 20px;
          width: 300px;
          display: block !important;
          background-color: #626262;
          border: 1px solid #3E3E3E;
          padding: 20px;
          border-radius: 5px;
          box-shadow: 0px 4px 4px rgb(0 0 0 / 25%);
          max-width: 800px;
        }

        .form-field {
          margin-bottom: 10px;
        }

        .form-add {
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
        }
        .form-add .form input[type="submit"] {
          display: block;
          margin: 0 auto;
        }
  
        .form header {
          font-size: 34px;
          font-weight: bold;
          text-align: center;
          margin-bottom: 16px;
        }

        form input[type="text"] {
        
          margin: 20px 0 20px;
          border-radius: 4px;
          width: 100%;
          margin-bottom: 16px;
        }
        form input[type="submit"] {
          color: white;
          background: #626262;
          border: 1px solid white;
          border-radius: 4px;
          padding: 8px 16px;
          font-size: 16px;
          font-weight: bold;

        }
        form input[type="submit"]:hover {
          background-color: #2F2F2F;
        }
        input[name]  {
          color: black;
        }
        .comments {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
        }

        .comments.list {
          margin-top: 30px;
        }

        .comments.list li {
          background-color: #333;
          color: #fff;
          border-radius: 5px;
          margin-bottom: 10px;
          padding: 10px;
          max-width: 600px;
        }

        .comments form {
          display: flex;
          flex-direction: column;
          align-items: center;
          margin-top: 30px;
        }

        .comments form input[type="text"] {
          background-color: #333;
          color: white;
          border-radius: 4px;
          margin-bottom: 10px;
          padding: 10px;
          width: 80%;
          max-width: 600px;
        }

        .comments form input[type="submit"] {
          background-color: #626262;
          border-radius: 5px;
          box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
          color: #fff;
          cursor: pointer;
          font-size: 20px;
          font-weight: bold;
          padding: 10px 20px;
          transition: background-color 0.3s ease;
          width: 80%;
          max-width: 600px;
        }

        .comments form input[type="submit"]:hover {
          background-color: #2F2F2F;
        }
        .delete-button {
          margin-left: 10px;
        }
        #list {
          margin-bottom: 50px;
        }
        .account {
          width: 75px;
          height: 75px;
          min-width: 40px;
          border-radius: 40%;
          border: 2px solid white;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          box-shadow: 0px 5px rgba(0, 0, 0, 0.15);
        }
        .account:hover{
          background: #2e2f30;
        }
        .home {
          width: 75px;
          height: 75px;
          min-width: 40px;
          border-radius: 40%;
          border: 2px solid white;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          box-shadow: 0px 5px rgba(0, 0, 0, 0.15);
        }
        .home:hover{
          background: #2e2f30;
        }
        .new-post {
          width: 75px;
          height: 75px;
          min-width: 40px;
          border-radius: 40%;
          border: 2px solid white;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          box-shadow: 0px 5px rgba(0, 0, 0, 0.15);
        }
        .new-post:hover{
          background: #2e2f30;
        }
        .notifications {
          width: 75px;
          height: 75px;
          min-width: 40px;
          border-radius: 40%;
          border: 2px solid white;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          box-shadow: 0px 5px rgba(0, 0, 0, 0.15);
        }
        .notifications:hover{
          background: #2e2f30;
        }
        .logout {
          width: 75px;
          height: 75px;
          min-width: 40px;
          border-radius: 40%;
          border: 2px solid white;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          box-shadow: 0px 5px rgba(0, 0, 0, 0.15);
        }
        .logout:hover{
          background: #2e2f30;
        }

        .questions {
          width: 75px;
          height: 75px;
          min-width: 40px;
          border-radius: 40%;
          border: 2px solid white;
          display: flex;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          box-shadow: 0px 5px rgba(0, 0, 0, 0.15);
        }
        .questions:hover{
          background: #2e2f30;
        }
        .menu {
          position: fixed;
          top: -20px;
          left: 0;
          height: 100%;
          padding: 20px;
        }

        .menuContainer {
          border-radius: 40%;
          justify-content: center;
          align-items: center;
          cursor: pointer;
          margin: 50px 0;
        }
    </style>
  </head>

  <body class="comments">

    <div class="menu">

      <div style="margin: 30px">

        <tr>
          <div class="menuContainer">
            <div class="home" style="margin: 15px 0"><td><%= link_to (image_tag('https://res.cloudinary.com/dx1gxrz2q/image/upload/v1683035485/home_mdmcd7.svg')), feed_path%></td></div>
            <div class="account" style="margin: 15px 0"><td><%= link_to (image_tag('https://res.cloudinary.com/hzodm3yak/image/upload/v1678982421/person_pl8ytb.svg')), user_path(@current_user) %></td></div>
            <div class="notifications" style="margin: 15px 0"><td><%= link_to (image_tag ('https://res.cloudinary.com/hzodm3yak/image/upload/v1678982420/notifications_lg4g2z.svg')) %></td></div>
            <div class="new-post" style="margin: 15px 0"><td><%= link_to (image_tag ('https://res.cloudinary.com/hzodm3yak/image/upload/v1678982418/add_btzygi.svg')), new_post_path, method: :get %></td></div>
          </div>

          <div class="questions" style="margin: 15px 0"><td><%= link_to (image_tag('https://res.cloudinary.com/hzodm3yak/image/upload/v1678982422/questions_exwzsj.svg')) %></td></div>

          <div class="logout">
            <td><%= link_to (image_tag asset_path('https://res.cloudinary.com/hzodm3yak/image/upload/v1678982420/logout_pjb0fx.svg')), logout_path %></td>
          </div>

        </tr>
      </div>
    </div>

    <div class="comments-section">

      <header>Comments</header>

        <div class="comments list">
          <% if @comments %>
            <ul>
              <% @comments.each do |comment| %>
                <li id="list" class="comments">

              <div class="comment">
              <div class="comment-text">

                <%= comment.text %>

                </div>
                  <% if comment.user == @current_user %>
                    <div class="delete-button">
                      <%= link_to post_comment_destroy_path(comment.id, post_id: comment.post.id, format: :html) do %>
                        <span style="float: right;"><%= image_tag('https://res.cloudinary.com/hzodm3yak/image/upload/v1678982418/delete_gzfb3h.svg', width: '44px', height: '42px') %></span>
                      <% end %>
                    </div>
                <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No comments yet.</p>
          <% end %>
      </div>
    </div> 

    <div class="add-comment-section">
      <header>Add comment</header>

      <%= form_with url: create_post_comments_url, method: :post do |f| %>
        <td class="add-comment"><%= f.text_field :text, placeholder: "Your comment" %><br></td>
        <td class="form-field"><%= f.submit 'Add comment' %></td>
      <% end %>
    </div>
  </body>
</html>